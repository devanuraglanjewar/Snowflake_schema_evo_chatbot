# Local environment variables (copy to .env and edit)

# LLM provider: "ollama" for local Ollama server, or "remote" for HTTP endpoint.
LLM_PROVIDER=ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b-instruct
LLM_ENDPOINT=
LLM_API_KEY=

# Embedding model (sentence-transformers)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Authentication: JSON map username -> hashed_password (generate with auth_setup.py)
AUTH_USERS={"anurag":"<paste_hashed_password_here>"}
AUTH_COOKIE_NAME=ai_snowflake_cookie
AUTH_COOKIE_KEY=ai_snowflake_signature
AUTH_COOKIE_EXPIRY_DAYS=1

# Optional Snowflake live mode (leave empty if not using)
SNOWFLAKE_ACCOUNT=
SNOWFLAKE_USER=
SNOWFLAKE_PASSWORD=
SNOWFLAKE_WAREHOUSE=
SNOWFLAKE_DATABASE=
SNOWFLAKE_SCHEMA=
